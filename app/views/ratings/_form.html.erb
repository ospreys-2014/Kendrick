<%= form_for :rating, url: { action: 'create', controller: 'ratings', user_id: user.id } do |f| %>

    <%= f.label :rating, 1 %>
    <%= f.radio_button :rating, 1  %> &nbsp;

    <%= f.label :rating, 2 %>
    <%= f.radio_button :rating, 2  %> &nbsp;

    <%= f.label :rating, 3 %>
    <%= f.radio_button :rating, 3  %> &nbsp;

    <%= f.label :rating, 4 %>
    <%= f.radio_button :rating, 4  %> &nbsp;

    <%= f.label :rating, 5 %>
    <%= f.radio_button :rating, 5  %><br>

    <%= f.hidden_field :ratingable_id, { value: user.id } %>
    <%= f.hidden_field :ratingable_type, { value: user.class.to_s } %>
    <%= f.hidden_field :user_id, { value: current_user.id } %>
    <%= f.submit %> 

<% end %>