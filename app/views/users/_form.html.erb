<h1>Sign Up</h1>
<div class="signup-form">
  <%= form_for(@user) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :username %><br />
      <%= f.text_field :username %>
    </div>
    <div class="field">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name %>
    </div>
    <div class="field">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %>
    </div>
    <div class="field">
      <%= f.label :email_address %><br />
      <%= f.text_field :email_address %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
    </div>
    <!-- Are you an artist? -->
    <div class="field">
      <span id="check-box"><%= f.check_box(:artist) %></span>
      <%= f.label(:artist, "I am an Artist") %>
    </div>
    <div class="field artist-form" style="display:none;">
      <%= f.label :avatar %><br />
      <%= f.file_field :avatar %>
    </div>
    <div class="field artist-form" style="display:none;">
      <%= f.label :bio %><br />
      <%= f.text_area :bio %>
    </div>
    <div class="field artist-form" style="display:none;">
      <%= f.label :soundcloud_profile %><br />
      <%= f.text_field :soundcloud_profile %><br />
    </div>
    <div class="field artist-form" style="display:none;">
    <%# Instead of listing each of your genres in this way, which is
        painstaking, iterate through the genres in the database, as
        provided from the controller.
    %>
    Pick your genres:<br />
      <%= check_box_tag("user[genres][Jazz]", 1, false ) %>
      <%= f.label(:genres, "Jazz") %>
    </div>
    <div class="field artist-form" style="display:none;">
      <%= check_box_tag("user[genres][HipHop]", 2, false ) %>
      <%= f.label(:genres, "Hip Hop") %>
    </div>
    <div class="field artist-form" style="display:none;">
      <%= check_box_tag("user[genres][Classical]", 3, false ) %>
      <%= f.label(:genres, "Classical") %>
    </div>
    <div class="field artist-form" style="display:none;">
      <%= check_box_tag("user[genres][Fiftys]", 4, false ) %>
      <%= f.label(:genres, "50's") %>
    </div>
    <div class="field artist-form" style="display:none;">
      <%= check_box_tag("user[genres][Pop]", 5, false ) %>
      <%= f.label(:genres, "Pop") %>
    </div>
    <div class="field artist-form" style="display:none;">
      <%= check_box_tag("user[genres][Opera]", 6, false ) %>
      <%= f.label(:genres, "Opera") %>
    </div>
    <div class="field artist-form" style="display:none;">
      <%= check_box_tag("user[genres][R&B-Soul]", 7, false ) %>
      <%= f.label(:genres, "R&B/Soul") %>
    </div>
    <div class="field artist-form" style="display:none;">
      <%= check_box_tag("user[genres][KPop]", 8, false ) %>
      <%= f.label(:genres, "K-Pop") %>
    </div>
    <div class="field artist-form" style="display:none;">
      <%= check_box_tag("user[genres][Blues]", 9, false ) %>
      <%= f.label(:genres, "Blues") %>
    </div>
    <div class="field artist-form" style="display:none;">
      <%= check_box_tag("user[genres][Screamo]", 10, false ) %>
      <%= f.label(:genres, "Screamo") %>
    </div>
    <div class="field artist-form" style="display:none;">
      <%= check_box_tag("user[genres][Heavy]", 11, false ) %>
      <%= f.label(:genres, "Heavy Metal") %>
    </div>
    <div class="field artist-form" style="display:none;">
      <%= check_box_tag("user[genres][Twerk]", 12, false ) %>
      <%= f.label(:genres, "Strickly Twerkin") %>
    </div>
    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
</div>
<% end %>
