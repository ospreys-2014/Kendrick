<h1 id="artist-tag">Artist Profile</h1>
<div id="artist-show">
  <div class="profile-pic">
    <%= image_tag @user.avatar.url %>
  </div>
  <ul>
    <p> <b>Username:</b> <%= @user.username %></p>
    <p> <b>Name:</b> <%= @user.full_name %></p>
    <p> <b>Email:</b> <%= @user.email_address %></p>
    <p> <b>Bio:</b> <%= @user.bio %></p>
    <p> <b>Email:</b> <%= @user.email_address %></p>
    <p> <b>Soundcloud:</b> <a href="<%= @user.soundcloud_profile %>"> Check Me Out!</a> </p>
    <p> <b>Average rating:</b> <span class="rating"><%= @average_rating %></span> </p>
  </ul>
</div>

<div id="rating-box">
  <% if session[:user_id] %>
    <%= render partial: "ratings/form", locals: { user: @user, current_user: @current_user, rating: @rating } %>
  <% end %>
</div>

<div id="user-review-box">
  <%= render "reviews/form", locals: {review: Review.new, user: @user} %>
</div>

<div id="reviews-display">
  <%= render "reviews/index", locals: {user: @user} %>
</div>

